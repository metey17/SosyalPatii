// "/getBlog" endpoint'ine yapılan isteği işleyen fonksiyon
function getBlogPosts() {
    const blogName = localStorage.getItem('blogName');
    fetch('/getBlog', {
        method: 'POST', // Get isteği gönder
        headers: {
            'Content-Type': 'application/json' // İçerik tipini belirt
        },
        body: JSON.stringify({
            blogName:blogName
        })
    })
    .then(response => response.json()) // Gelen yanıtı JSON olarak dönüştür
    .then(data => {
        // Blog kartlarını oluştur
        // createBlogCards(data);

        const blogDetails = document.querySelector('.blog-info .blog-details');
    let blogTitle = blogDetails.querySelector('.blog-details-title');
    let blogDescription = blogDetails.querySelector('.blog-details-description');
    let author = document.querySelector('.blog-meta-left ul li a');// Blog kartlarının ekleneceği div'i seç
    let imgSrc = document.querySelector('.blog-thumb-img img');

    author.textContent = data[0].author;    
    blogTitle.textContent = data[0].title;
    blogDescription.textContent = data[0].description;
    imgSrc.src = "assets/img/blog/"+data[0].img_name;


    })
    .catch(error => console.error('Hata:', error)); // Hata durumunda konsola hata mesajını yazdır


}

